<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".ui.ingredient.IngredientFragment"
    android:layout_marginTop="60dp"
    android:layout_marginBottom="60dp">

    <Button
        android:id="@+id/btn_select_ingredient"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="재료 선택"
        android:layout_marginBottom="16dp"
        android:backgroundTint="#2196F3"
        android:textColor="@android:color/white"
        android:elevation="4dp"
        android:textSize="14sp" />

    <Button
        android:id="@+id/btn_purchase_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="구매 날짜 선택"
        android:layout_marginBottom="16dp"
        android:backgroundTint="#2196F3"
        android:textColor="@android:color/white"
        android:elevation="4dp"
        android:textSize="14sp" />

    <Button
        android:id="@+id/btn_expiry_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="소비 기한 선택"
        android:layout_marginBottom="16dp"
        android:backgroundTint="#2196F3"
        android:textColor="@android:color/white"
        android:elevation="4dp"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/et_quantity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="수량 입력"
        android:inputType="number"
        android:layout_marginBottom="24dp"
        android:textSize="18sp" />

    <Spinner
        android:id="@+id/spinner_storage_location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:prompt="@string/storage_location_prompt"
        android:textSize="18sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <Button
        android:id="@+id/btn_add"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="추가"
        android:backgroundTint="#4CAF50"
        android:textColor="@android:color/white"
        android:elevation="4dp"
        android:textSize="16sp" />

</LinearLayout>
